<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.gamesforkids.gamesforkids">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_flavor"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_flavor"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ru.gamesforkids.gamesforkids.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="ru.gamesforkids.gamesforkids.Game1Activity"
            android:screenOrientation="landscape"></activity>
        <activity android:name="ru.gamesforkids.gamesforkids.Game2Activity"
            android:screenOrientation="landscape"></activity>


        <activity android:name="ru.gamesforkids.gamesforkids.Game4Activity"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>