<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/g2Sky"
    android:orientation="horizontal"
    tools:context="ru.gamesforkids.gamesforkids.Game2Activity">

    <RelativeLayout
        android:id="@+id/rainbow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-60dp">

            <ImageView
                android:id="@+id/arc2iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/arc2" />

            <ImageView
                android:id="@+id/arc1iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/arc1" />

            <ImageView
                android:id="@+id/arc4iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/arc4" />

            <ImageView
                android:id="@+id/arc3iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/arc3" />

            <ImageView
                android:id="@+id/arc5iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/arc5" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            app:srcCompat="@drawable/cloud" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/colors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/color1ib"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@null"
            android:elevation="5dp"
            android:scaleType="fitCenter"
            android:translationZ="4dp"
            app:srcCompat="@drawable/circle" />

        <ImageButton
            android:id="@+id/color2ib"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/circle" />

        <ImageButton
            android:id="@+id/color3ib"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/circle" />

    </LinearLayout>

</LinearLayout>